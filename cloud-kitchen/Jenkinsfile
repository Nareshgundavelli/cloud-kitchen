pipeline {
    agent any

    environment {
        WEB_DIR = "/var/www/html"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Nareshgundavelli/cloud-kitchen.git'
            }
        }

        stage('Install Nginx') {
            steps {
                sh '''
                if ! command -v nginx >/dev/null; then
                  sudo apt update
                  sudo apt install -y nginx
                fi
                '''
            }
        }

        stage('Deploy Website') {
            steps {
                sh '''
                sudo rm -rf /var/www/html/*
                sudo cp -r * /var/www/html/
                '''
            }
        }
    }

    post {
        success {
            sh '''
            IP=$(curl -s http://checkip.amazonaws.com || hostname -I | awk '{print $1}')
            echo "====================================="
            echo " Website deployed successfully ðŸŽ‰"
            echo " Access URL: http://3.80.81.18/"
            echo "====================================="
            '''
        }
    }
}
